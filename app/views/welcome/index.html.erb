                        <% x = x + 1 %>                       
                        <% end %>
                        <% end %>
                        </tr>               
                        
                        <tr>
                        <% x=1%>
                        <% @cursostarde.each do |c| %>      
                        <% if x <=5 && !c.asignado %>                    
                        <td>Turno: <%= c.turno %></td>
                        <% x = x + 1 %>      
                        <% c.toggle(:asignado) %>                 
                        <% end %>
                        <% end %>
                        </tr> 


                        <br> 


                        <tr>    
                        <% @dias.each do |p| %>
                        <th><%= p %></th>
                        <% end %>
                        </tr>           
                   
                        
                        <tr>
                        <% x=1%>
                        <% @cursosnoche.each do |c| %>      
